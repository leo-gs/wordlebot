<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.EndOfGameDialogFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_body_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_dialog_30"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".30"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_dialog_85"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".85"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_dialog_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".50"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline_dialog_30">

        <ImageView
            android:id="@+id/dialog_header_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.65"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/dialog_icon_tint"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/dialog_header_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"
            android:textSize="64sp"
            android:textStyle="bold"
            app:fontVariationSettings="'wght' 900"
            android:textColor="@color/dialog_header_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/game_stats"
        android:id="@+id/dialog_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_dialog_30"
        app:layout_constraintBottom_toTopOf="@id/guideline_dialog_85">
    </include>

    <com.mine.helpfle.ui.ActionButton
        android:id="@+id/dialog_btn_dismiss"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/dialog_btn_dismiss"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_dialog_85"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/guideline_dialog_vertical" />

    <com.mine.helpfle.ui.ActionButton
        android:id="@+id/dialog_btn_newgame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/dialog_btn_newgame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_dialog_85"
        app:layout_constraintLeft_toLeftOf="@id/guideline_dialog_vertical"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>