<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/statsview_bg">

    <TextView
        android:id="@+id/stats_numGames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/stats_textSize"
        android:textColor="@color/statsview_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/stats_gamesWon"/>

    <TextView
        android:id="@+id/stats_gamesWon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/stats_textSize"
        android:textColor="@color/statsview_text"
        app:layout_constraintTop_toBottomOf="@id/stats_numGames"
        app:layout_constraintBottom_toTopOf="@id/stats_gamesLost"/>

    <TextView
        android:id="@+id/stats_gamesLost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/stats_textSize"
        android:textColor="@color/statsview_text"
        app:layout_constraintTop_toBottomOf="@id/stats_gamesWon"
        app:layout_constraintBottom_toTopOf="@id/stats_avgGuesses"/>

    <TextView
        android:id="@+id/stats_avgGuesses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/stats_textSize"
        android:textColor="@color/statsview_text"
        app:layout_constraintTop_toBottomOf="@id/stats_gamesLost"
        app:layout_constraintBottom_toTopOf="@id/stats_currentStreak"/>

    <TextView
        android:id="@+id/stats_currentStreak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/stats_textSize"
        android:textColor="@color/statsview_text"
        app:layout_constraintTop_toBottomOf="@id/stats_avgGuesses"
        app:layout_constraintBottom_toTopOf="@id/stats_longestStreak"/>

    <TextView
        android:id="@+id/stats_longestStreak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/stats_textSize"
        android:textColor="@color/statsview_text"
        app:layout_constraintTop_toBottomOf="@id/stats_currentStreak"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>