<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="200dp"
    android:background="@color/keyboard_bg"
    android:paddingHorizontal="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_keyboard_30"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".30"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_keyboard_60"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".60"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_keyboard_90"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".90"/>

    <LinearLayout
        android:id="@+id/keyboard_row_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/keyboard_bg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline_keyboard_30"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyboard_row_middle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/keyboard_bg"
        app:layout_constraintTop_toBottomOf="@id/guideline_keyboard_30"
        app:layout_constraintBottom_toTopOf="@+id/guideline_keyboard_60"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyboard_row_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/guideline_keyboard_60"
        app:layout_constraintBottom_toTopOf="@+id/guideline_keyboard_90"
        android:orientation="horizontal"
        android:weightSum="12"
        android:background="@color/keyboard_bg">

        <com.mine.helpfle.ui.ActionButton
            android:id="@+id/btn_enter"
            android:backgroundTint="@color/keyboard_btnenter_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/enter"
            android:contentDescription="@string/enter" />

        <LinearLayout
            android:id="@+id/keyboard_row_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_weight="8"
            android:orientation="horizontal">
        </LinearLayout>

        <com.mine.helpfle.ui.ActionButton
            android:id="@+id/btn_delete"
            android:backgroundTint="@color/keyboard_btndelete_bg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/delete"
            android:contentDescription="@string/delete" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>