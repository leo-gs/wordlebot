<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyboard_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/keyboard_row_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/keyboard"
        app:layout_constraintBottom_toTopOf="@+id/keyboard_row_middle"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyboard_row_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/keyboard"
        app:layout_constraintBottom_toTopOf="@+id/keyboard_row_bottom_container"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyboard_row_bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12"
        android:background="@color/keyboard"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.mine.helpfle.ui.ActionButton
            android:id="@+id/btn_enter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/enter"
            android:contentDescription="@string/enter" />

        <LinearLayout
            android:id="@+id/keyboard_row_bottom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_weight="8"
            android:orientation="horizontal">
        </LinearLayout>

        <com.mine.helpfle.ui.ActionButton
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="@string/delete"
            android:contentDescription="@string/delete" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>