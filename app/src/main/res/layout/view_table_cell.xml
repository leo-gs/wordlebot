<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:padding="0dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_table_cell_back"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/card_back"
        android:layout_gravity="center"
        android:background="@drawable/rounded_corner"
        android:foreground="@drawable/rounded_corner"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp" >
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_table_cell"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_gravity="center"
        android:backgroundTint="@color/card_bg"
        android:background="@drawable/rounded_corner_border"
        android:foreground="@drawable/rounded_corner_border"
        android:layout_margin="5dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp" >

    <com.mine.helpfle.ui.CardLetterTextView
            android:id="@+id/letter_view"
            app:drawBorder="true"
            app:textSize="@dimen/letterView_textSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>